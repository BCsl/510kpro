<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >
    <EditText 
        android:id="@+id/server_ip_text_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:inputType="text"
        android:hint="@string/input_server_ip_hint"
        />
    <Button 
        android:id="@+id/ok_button_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_str"
        android:layout_below="@id/server_ip_text_ID"
        android:layout_alignRight="@id/server_ip_text_ID"
        />

</RelativeLayout>